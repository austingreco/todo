/* Space out content a bit */
body
  padding-bottom: 20px


/* Everything but the jumbotron gets side spacing for mobile first views */
.header,
.marketing,
.footer
  padding-left: 0
  padding-right: 0

.navbar-brand
  font-size: 1.5em


/* Custom page header */
.header
  border-bottom: 1px solid #e5e5e5
  h3
    margin-top: 0
    margin-bottom: 0
    line-height: 40px
    padding-bottom: 19px

/* Custom page footer */
.footer
  padding-top: 19px
  color: #777
  border-top: 1px solid #e5e5e5


/* Customize container */
@media (min-width: 768px)
  .container
    max-width: 730px


.container-narrow > hr
  margin: 30px 0


/* Main marketing message and sign up button */
.jumbotron
  text-align: center
  border-bottom: 1px solid #e5e5e5

  .btn
    font-size: 21px
    padding: 14px 24px


/* Supporting marketing content */
.marketing
  margin: 1em 0

  p + h4
    margin-top: 28px


/* Responsive: Portrait tablets and up */
@media screen and (min-width: 768px)
  /* Remove the padding we set earlier */
  .header,
  .marketing,
  .footer
    padding-left: 0
    padding-right: 0

  /* Space out the masthead */
  .header
    margin-bottom: 30px

  /* Remove the bottom border on the jumbotron for visual effect */
  .jumbotron
    border-bottom: 0

  .filter-group
    float: right

  .task-list
    margin-top: 15px

  .navbar-header
    float: none


.navbar
  border-left: none
  border-right: none
  border-radius: 0


.todo-list
  padding-left: 0
  list-style-type: none
  border: 1px solid #ccc
  border-color: rgba(0,0,0,.2)
  border-radius: 3px
  box-shadow: 0 2px 10px rgba(0,0,0,.2)
  margin-top: 10px
  background-color: #fff

  > li
    padding: 15px 72px
    font-size: 1.5em
    border-bottom: solid 1px #eee
    position: relative

    &:last-child
      border-bottom: none

    small
      color: #888;
      font-weight: normal

    h3
      margin-bottom: 0
      margin-top: 6px


.todo-icon
  position: absolute
  left: 24px
  top: 0
  bottom: 0
  margin: auto 0 !important
  height: 1em
  -webkit-appearance: none
  appearance: none
  padding-bottom: 10px

.task-list
  padding-left: 0
  list-style-type: none
  border: 1px solid #ccc
  border-color: rgba(0,0,0,.2)
  border-radius: 3px
  box-shadow: 0 2px 10px rgba(0,0,0,.2)
  background-color: #fff

  > li
    padding: 20px 52px
    font-size: 1.5em
    border-bottom: solid 1px #eee
    position: relative
    min-height: 70px

    &:last-child
      border-bottom: none

.task-rm
  position: absolute
  right: 16px
  top: 0
  bottom: 0
  margin: auto 0
  height: 32px


.task-check
  position: absolute
  left: 16px
  top: 0
  bottom: 4px
  margin: auto 0 !important
  height: 1em
  opacity: 0.2
  -webkit-appearance: none
  appearance: none
  padding-bottom: 10px
  cursor: pointer
  outline: none !important
  transition: 0.3s ease-out


.task-complete .task-text > span
  color: rgba(0,0,0,0.5)
  text-decoration: line-through


.task-check:checked
  opacity: 1
  color: #2b4
  text-shadow: 0 1px 2px rgba(0,0,0,0.5)


.task-check:after
  content: '\e013'


.dropdown-menu
  max-width: 200px

  li
    cursor: pointer

.task-filter
  list-style-type: none
  margin: 0
  padding-left: 0

  > li
    display: inline-block
    padding: 5px

    &.active a
      color: #000
      font-weight: bold

.task-text
  cursor: pointer
  transition: 0.3s ease-out
  position: relative
  min-width: 40px


.task-text > span
  min-width: 3em
  display: inline-block


.edit-task
  position: absolute
  left: 0


.form-inline .form-group
  margin-right: 5px


@media (max-width: 768px)

  .task-filter
    list-style-type: none
    display: block

  .task-check
    left: 14px

  .task-rm
    right: 10px

  .task-list li
    font-size: 1.2em
    padding: 20px 42px

  .form-group
    display: inline-block
    margin-bottom: 15px

  .navbar-right
    float: right !important


  .navbar-form
    border: none
    padding: 6px 15px
    margin-top: 0
    margin-bottom: 0
    margin-right: 0

  .navbar-header
    clear: none !important


@keyframes fadeIn { from { opacity:0; } to { opacity:1; } }

[ng-view] > div
  opacity: 0
  animation: fadeIn ease-in 1
  animation-fill-mode: forwards
  animation-duration: 0.25s

h1
  min-height: 39px

.footer
  display: none

.repeat-item.ng-enter,
.repeat-item.ng-leave
  -webkit-transition: 0.1s ease-out all
  transition: 0.1s ease-out all

.repeat-item.ng-enter,
.repeat-item.ng-leave.ng-leave-active
  opacity: 0
  transform: translate(0, -25%)

.repeat-item.ng-leave,
.repeat-item.ng-enter.ng-enter-active
  opacity: 1
  transform: translate(0, 0)
